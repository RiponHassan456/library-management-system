<!-- views/addBook.ejs -->
<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8" />
  <title>বই যোগ করুন</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card-3d {
      border: none;
      border-radius: 15px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1), 0 6px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
      background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }
    .card-3d:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2), 0 10px 10px rgba(0, 0, 0, 0.1);
    }
    .form-control {
      border-radius: 10px;
      border: 1px solid #ced4da;
      transition: all 0.3s;
    }
    .form-control:focus {
      border-color: #80bdff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
      transform: scale(1.02);
    }
    .btn-primary {
      background: linear-gradient(135deg, #0062cc 0%, #004ba0 100%);
      border: none;
      border-radius: 50px;
      padding: 10px 25px;
      font-weight: 600;
      letter-spacing: 0.5px;
      box-shadow: 0 4px 15px rgba(0, 98, 204, 0.3);
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0, 98, 204, 0.4);
    }
    .header-title {
      color: #343a40;
      font-weight: 700;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
    }
    .form-label {
      font-weight: 600;
      color: #495057;
    }
    .custom-file-label::after {
      content: "Browse";
      background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
      color: white;
      border-radius: 0 9px 9px 0;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card card-3d">
          <div class="card-body p-5">
            <h3 class="text-center header-title mb-4">
              <i class="fas fa-book-open mr-2"></i>Add New Book
            </h3>

            <form action="/addBook" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="title" class="form-label">Title:</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-heading"></i></span>
                  </div>
                  <input type="text" name="title" placeholder="Enter book title" class="form-control" id="title" required>
                </div>
              </div>

              <div class="form-group">
                <label for="author" class="form-label">Author:</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user-edit"></i></span>
                  </div>
                  <input type="text" name="author" placeholder="Enter book author" class="form-control" id="author" required>
                </div>
              </div>

              <div class="form-group">
                <label for="catId" class="form-label">Category:</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-tags"></i></span>
                  </div>
                  <select name="catId" class="form-control" id="catId" required>
                    <% categories.forEach(function(category) { %>
                      <option value="<%= category._id %>"><%= category.catName %></option>
                    <% }); %>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="coverImage" class="form-label">Cover Image:</label>
                <div class="custom-file">
                  <input type="file" name="coverImage" id="coverImage" accept="image/*" class="custom-file-input">
                  <label class="custom-file-label" for="coverImage">Choose file...</label>
                </div>
              </div>

              <div class="form-group">
                <label for="cellNumber" class="form-label">Cell Number:</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                  </div>
                  <input type="text" name="cellNumber" id="cellNumber" placeholder="Enter the cell number" class="form-control">
                </div>
              </div>

              <div class="form-group form-check">
                <input type="checkbox" name="isAvailable" class="form-check-input" id="availableCheck" checked />
                <label class="form-check-label" for="availableCheck">Available</label>
              </div>

              <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-plus-circle mr-2"></i>Add Book
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
  
  <script>
    // For file input label
    $('.custom-file-input').on('change', function() {
      let fileName = $(this).val().split('\\').pop();
      $(this).next('.custom-file-label').addClass("selected").html(fileName);
    });
  </script>
</body>
</html>