function renderList(data, container, page) {
  container.innerHTML = "";
  const start = (page - 1) * itemsPerPage;
  const end = start + itemsPerPage;
  const pageItems = data.slice(start, end);

  pageItems.forEach((item) => {
    const li = document.createElement("li");
    li.className = "mb-4 border-b border-[#d9d9d9] pb-3";

    const a = document.createElement("a");
    a.href = item.url;
    a.className = "text-[#0f7bbf] hover:underline";
    a.textContent = item.title;

    const p = document.createElement("p");
    p.className = "text-[11px] mt-1 text-[#0f3a5d]";
    p.textContent = item.date;

    li.appendChild(a);
    li.appendChild(p);
    container.appendChild(li);
  });
}

function renderPagination(data, container, currentPage, onPageChange) {
  container.innerHTML = "";

  const totalPages = Math.ceil(data.length / itemsPerPage);

  function createPageButton(label, page, isActive = false, isDisabled = false) {
    const btn = document.createElement("a");
    btn.href = "#";
    btn.textContent = label;
    btn.className = `px-2 py-0.5 border rounded-sm ${
      isActive
        ? "border-[#0f7bbf] bg-[#0f7bbf] text-white"
        : "border-[#d9d9d9] text-[#0f7bbf] hover:underline"
    }`;
    if (isDisabled) {
      btn.className =
        "px-2 py-0.5 border border-[#d9d9d9] rounded-sm text-gray-400 cursor-not-allowed select-none";
      btn.removeAttribute("href");
    } else {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        if (page !== currentPage) {
          onPageChange(page);
        }
      });
    }
    return btn;
  }

  container.appendChild(
    createPageButton("« First", 1, false, currentPage === 1)
  );
  container.appendChild(
    createPageButton("‹ Previous", currentPage - 1, false, currentPage === 1)
  );

  let startPage = 1;
  let endPage = totalPages;
  if (totalPages > 9) {
    if (currentPage <= 5) {
      startPage = 1;
      endPage = 9;
    } else if (currentPage + 4 >= totalPages) {
      startPage = totalPages - 8;
      endPage = totalPages;
    } else {
      startPage = currentPage - 4;
      endPage = currentPage + 4;
    }
  }

  for (let i = startPage; i <= endPage; i++) {
    container.appendChild(createPageButton(i, i, i === currentPage));
  }

  container.appendChild(
    createPageButton("› Next", currentPage + 1, false, currentPage === totalPages)
  );
  container.appendChild(
    createPageButton("Last »", totalPages, false, currentPage === totalPages)
  );
}

